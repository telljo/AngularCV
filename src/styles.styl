@font-face {
    font-family: deadjim;
    src: url(src/assets/Fonts/HesDeadJim.woff) format("opentype");    
}

/* You can add global styles to this file, and also import other style files */
html 
    height: 100%
    overflow-y: scroll;
    overflow-x: hidden;
body 
    margin: 0px
    height 100%
    
h2, p, h1, h3
    color: #333333;
    font-family: Century Gothic, sans-serif;

/* Add a hover effect if you want */
.fa1
  padding: 15px;
  font-size: 20px;
  width: 20px;
  border-radius: 50%;
  border 2px solid white
  text-align: center;
  text-decoration: none;
  color: white

/* Add a hover effect if you want */
.fa1:hover 
  opacity: 0.7;

footer 
    align-self: flex-end
    bottom 0px
    width: 100%;
    height 120px;
    background-color #2c3e50
    text-align: center;

footer h2
    margin 0px
    margin-top 15px
    color white  
    font-size 25px
    padding 0px
    
#socials
    display: flex
    width: 200px
    margin auto
    justify-content: space-between
    margin-top 10px

button 
    cursor pointer

.stop-scrolling {
  height: 100%;
  overflow: hidden;
}