.button_cont span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button_cont
    width 200px
    margin auto

.button_cont span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button_cont:hover span {
  padding-right: 15px;
}

.button_cont:hover span:after {
  opacity: 1;
  right: 0;
}