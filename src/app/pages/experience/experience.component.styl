/* EFFECTS
–––––––––––––––––––––––––––––––––––––––––––––––––– */

.timeline-item {
  visibility: hidden;
  opacity: 0;
  transition: all .5s ease-in-out;
}

.timeline-item:nth-child(even) {
  transform: translate3d(-200px, 0, 0);
}

.timeline-item:nth-child(odd) {
  transform: translate3d(200px, 0, 0);
}

.timeline-item.in-view {
  transform: none;
  visibility: visible;
  opacity: 1;
}

@media screen and (max-width: 768px) {

	.timeline {

		&::before {
			left: 50px;
		}

		.timeline-img {
			left: 50px;
		}

		.timeline-content {
			max-width: 100%;
			width: auto;
			margin-left: 70px;
		}

		.timeline-item {

			&:nth-child(even) {

				.timeline-content {
					float: none;

				}
			}

			&:nth-child(odd) {

				.timeline-content {
					
					&::after {
						content: '';
						position: absolute;
						border-style: solid;
						width: 0;
						height: 0;
						top: 30px;
						left: -15px;
						border-width: 10px 15px 10px 0;
						border-color: transparent #f5f5f5 transparent transparent;
					}
				}

			}
		}
	}
	
}
