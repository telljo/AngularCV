#content
    display flex
    flex-direction column
    margin auto
    background-color white
    text-align center
    min-height 100%
    
.abovesection
    background-color #0B4F6C
    height 100vh-50px
    margin auto
    flex-direction column
    width 100%

.belowsection
    background-color white
    height 1000px
    margin auto
    flex-direction column
    width 100%

.bottompage
    background-color #e0e0e0 
    height 600px
    margin auto
    flex-direction column
    width 100%

p
    margin-bottom 0px
    margin-top 25px

.toptitle
    display flex
    justify-content center
    flex-direction column
    margin-top 180px
    transition transform 1s ease
    transition-delay 0.2s

.bottomtitle
    display flex
    justify-content center
    margin-top 100px
    transition transform 1s ease
    transition-delay 0.2s

.bottomtitle2
    display flex
    justify-content center
    margin-top 80px

.title
    font-family: 'deadjim', 'arial', sans-serif;  
    font-style: normal;
    font-weight: 300;
    font-size 80px
    margin: 0px;
    color white

.title2
    font-family: 'deadjim', 'arial', sans-serif;  
    font-style: normal;
    font-weight: 300;
    font-size 80px
    margin: 0px;
    color #0B4F6C
    

.technicalsection
    display flex
    flex-direction column
    margin auto
    margin-top 150px
    margin-bottom 50px
    text-align center
    box-shadow 0 20px 20px -15px rgba(0, 0, 0, .3)
    transition transform 1s ease
    transition-delay 0.2s
    background-color white
    height 400px
    width 600px
    border-radius 4px	

.header
    height 50px
    text-align center
    margin 0px
    width 100%

.portfolio
    display flex
    flex-flow row wrap
    margin auto
    margin-top 140px
    margin-bottom 50px
    text-align center
    box-shadow 0 20px 20px -15px rgba(0, 0, 0, .3)
    transition transform 1s ease
    background-color white
    height 600px
    width 600px
    padding 0
    border-radius 4px	

.infoText
    margin auto
    margin-top 20px
.card   
    width 100%
    height 50%
    display flex

.hiddenblock
    width 100%
    background lightgrey
    opacity 0.9
    height 0%
    transition height 500ms
    p
        padding: 1rem 1.5rem;
        text-align: center;
        color: #00343f;
        padding-top 40px
        transition: visibility 0s, opacity 0.3s linear;
        opacity 0

.card:hover .hiddenblock
    top 0
    z-index: 2
    height 100%
    p
        visibility: visible
        color black
        opacity 1

.certificates
    display flex
    margin auto
    height 350px
    flex-direction row
    justify-content space-between
.certificate
    display flex
    flex-direction column
    justify-content: space-between
    margin auto
    text-align center
    transition transform 1s ease
    transition-delay 0.2s
    height 350px
    width 300px
    border-radius 4px	 
    background-color white 

.certificate:hover
    opacity 0.5
.certificate:nth-child(1)
    background: url('src\assets\Images\microsoft.png') center no-repeat;  

.certificate:nth-child(2)
    background: url('src\assets\Images\azure-dev.jpeg') center no-repeat; 

.certLink
    display block
    width 300px
    height 350px

.card:nth-child(1)
    background: url('src\assets\Images\AngularCV2.png') top/contain no-repeat;

.card:nth-child(2)
    background: url('src\assets\Images\Squash.png') top/contain no-repeat;

.in-view
    transform translateY(-100px)

.topsection
    background-color #e0e0e0 
    width 100%
    margin 0
    height 130px

.bottomsection
    display block
    padding 15px
    margin auto
    width 90%
    flex-direction column
    justify-content center
    background-color white

.bar 
    align-items flex-end
    background-color #eee
    color: #00343f
    font: 13px/1.4 Helvetica, arial, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol";
    font-weight: 500
    width 80%
    font-size 11pt
    height 28px

.flex
    display flex
    margin-bottom 15px
    margin-left 50px
    background-color lightgrey
    flex-direction row
    justify-content space-between
span 
    display initial  
    z-index 1
    padding 0 5px 0 0
    margin-bottom 4px

.fill
    left: 0;
    position relative
    width 0px
    top: 0;  
    background-color: #00a1a7;
    opacity: 1;
    z-index 2
    padding: 0;
    transition-property width
    transition-duration 1s
    transition-timing-function: ease-in-out

.tag
    left: 0;
    top 0
    display flex
    padding-top 5px
    justify-content center
    position: absolute;
    background-color: #04c2c9;
    margin 0
    color: #fff;
    height 23px
    width: 110px;
    font: 13px/1.4 Helvetica, arial, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol";
    font-weight: 700;

p
  font-size: 18px;
  color #00343f
  line-height: 1.5;
  text-align: center;
  text-justify: auto;

.certText
    color #00343f
    height 60px

@media (max-width: 769px)
    
    .technicalsection
        width 85%
    .flex
        margin-left 0
        margin-right 0
        width 100%
    .tag 
        width 80px
    span 
        padding 0
    .title
        font-size 60px
    .title2
        font-size 60px
    .portfolio
        width 90%
    .hiddenblock
        margin-top 180px
    .hiddenblock p
        opacity 1
        margin-top 10px
        padding 0px
        margin-bottom 10px
    .card
        margin-bottom 230px
        height 200px
    .card:nth-child(2)
        margin-top 25px
    .card:hover .hiddenblock
        height 0%
    .infoText
        opacity 0
    .belowsection
        height 1050px
    .certificates
        margin-top 0px