#content
    display flex
    flex-direction column
    margin auto
    background-color white
    text-align center
    min-height 100%
    
.abovesection
    background-color white
    height 850px
    margin auto
    flex-direction column
    width 100%

.belowsection
    background-color #f5f5f5
    height 850px
    margin auto
    flex-direction column
    width 100%

p
    margin-bottom 0px
    margin-top 25px

.toptitle
    display flex
    justify-content center
    flex-direction column
    margin-top 180px
    transition transform 1s ease
    transition-delay 0.2s

.bottomtitle
    display flex
    justify-content center
    margin-top 100px
    transition transform 1s ease
    transition-delay 0.2s

.title
    font-family: 'deadjim', 'arial', sans-serif;  
    font-style: normal;
    font-weight: 300;
    font-size 80px
    margin: 0px;
    color #19647E

.technicalsection
    display flex
    flex-direction column
    margin auto
    margin-top 150px
    margin-bottom 50px
    text-align center
    box-shadow 0 20px 20px -15px rgba(0, 0, 0, .3)
    transition transform 1s ease
    transition-delay 0.2s
    background-color white
    height 400px
    width 600px
    border-radius 4px	

.portfolio
    display flex
    flex-flow row wrap
    margin auto
    margin-top 150px
    margin-bottom 50px
    text-align center
    box-shadow 0 20px 20px -15px rgba(0, 0, 0, .3)
    transition transform 1s ease
    background-color white
    height 600px
    width 600px
    padding 0
    border-radius 4px	

.card
    width 50%
    height 50%

.card:nth-child(1)
    background: url('src\assets\Images\AngularCV.png') center/contain no-repeat;

.portfolio.in-view
    transform translateY(-100px)

.topsection
    background-color #f7f7f7
    width 100%
    margin 0
    height 130px

.bottomsection
    display block
    padding 15px
    margin auto
    width 90%
    flex-direction column
    justify-content center

.bar 
    align-items flex-end
    background-color #eee
    color: #666
    width 80%
    font-size 11pt
    height 28px

.flex
    display flex
    margin-bottom 15px
    margin-left 50px
    flex-direction row
    justify-content space-between
span 
    display initial  
    z-index 1
    padding 0 10px 0 0
    margin-bottom 5px

.fill
    left: 0;
    position relative
    width 0px
    top: 0;  
    background-color: #00a1a7;
    opacity: 1;
    z-index 2
    padding: 0;
    transition-property width
    transition-duration 1s
    transition-timing-function: ease-in-out

.tag
    left: 0;
    top 0
    display flex
    padding-top 5px
    justify-content center
    position: absolute;
    background-color: #04c2c9;
    margin 0
    color: #fff;
    height 23px
    width: 110px;
    font: 13px/1.4 Helvetica, arial, freesans, clean, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol";
    font-weight: 700;

    